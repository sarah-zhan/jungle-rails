<section class="admin-categories-index">

  <header class="page-header">
    <h1>Admin &raquo; All Categories</h1>
  </header>

  <div class="panel panel-default categories">

    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Categories</th>
        </tr>
      </thead>
      <tbody>
        <%= render @categories %>
      </tbody>
    </table>
  </div>
  <br>
  <div class="well">
    <%= link_to '+ New Categories' , [:new, :admin, :category], class: 'btn btn-success' %>
  </div>

</section>